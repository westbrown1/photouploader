<!-- container -->
<div class="container">
   <p id="notice"><%= notice %></p>

  <h1>Listing Posts</h1>

      <% @posts.each do |post| %>
        
         <h4 class="postdis">Title</h4><%= post.title %><br>
          <a href="<%= post_url(post) %>"><%= image_tag(post.image.profile_size.url) %></a><br>
          <h4 class="postdis">Description</h4><%= post.description %><br>
          <%= link_to 'Show |', post %>
          <%= link_to ' Edit |', edit_post_path(post) %>
          <%= link_to ' Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
        
      <% end %>
  

  <br>

  <%= link_to 'New Post', new_post_path %>
  </div><!-- /container -->

